{
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2015,
        "sourceType": "module"
    },
    "rules": {
        "brace-style": [ "error", "stroustrup", { "allowSingleLine": true } ],
        "indent": [ "error", 4 ],
        "linebreak-style": "off"
    },
    "overrides": [
      { "files": ["src/*-proto.js"], "rules": { "brace-style": "off" } },
      { "files": ["src/*-schema.js"], "rules": { "indent": "off" } }
    ],
    "globals": {
        "flatbuffers": "readonly",
        "protobuf": "readonly"
    }
}